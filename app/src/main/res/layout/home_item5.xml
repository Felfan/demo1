<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="530dp">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <View
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/gray"
            android:layout_width="0dp"
            android:layout_height="2dp"/>
        <TextView
            android:textSize="15dp"
            android:id="@+id/text_item5_title"
            android:text="梦多多"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:background="@color/gray"
            android:layout_height="2dp"/>
    </LinearLayout>
    <ImageView
        android:clickable="true"
        android:onClick="oneOfImageClick"
        android:id="@+id/image0_item5"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="320dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image1_item5"
                android:clickable="true"
                android:onClick="oneOfImageClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="1dp"
                android:background="@color/gray"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image2_item5"
                android:clickable="true"
                android:onClick="oneOfImageClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="1dp"
                android:background="@color/gray"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image3_item5"
                android:clickable="true"
                android:onClick="oneOfImageClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image4_item5"
                android:clickable="true"
                android:onClick="oneOfImageClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="1dp"
                android:background="@color/gray"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image5_item5"
                android:clickable="true"
                android:onClick="oneOfImageClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <View
                android:layout_width="1dp"
                android:background="@color/gray"
                android:layout_height="match_parent"/>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/image6_item5"
                android:clickable="true"
                android:onClick="oneOfImageClick"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>