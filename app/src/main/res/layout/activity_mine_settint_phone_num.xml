<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
    >
        <ImageView
            android:id="@+id/phoneNum_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/aliwx_common_back_btn_pressed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="验证手机号码"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/phoneNum_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_close"
            android:textSize="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#edeaea"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_my_phone_dark"/>
        <TextView
            android:id="@+id/phoneNum_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="182"
            android:textColor="#000"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/phoneNum_editText1"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/phoneNum_editText2"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/phoneNum_editText3"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"/>
        <EditText
            android:id="@+id/phoneNum_editText4"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:inputType="number"/>
        <TextView
            android:id="@+id/phoneNum_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1687"
            android:textColor="#000"
            android:textSize="20dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#edeaea"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_my_lock_dark"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="250dp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/phoneNum_inputPwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入密码"
                android:background="@null"
                android:textColor="#000"
                android:textSize="20dp"/>
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/phoneNum_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/phonenum_selector"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#edeaea"></RelativeLayout>
</LinearLayout>