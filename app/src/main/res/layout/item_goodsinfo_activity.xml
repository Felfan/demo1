<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_goodsInfoActivity_item"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/imageView_goodsInfoActivity_item"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textView_goodsInfoActivity_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Kitty 16秋冬新品儿童加绒 中筒靴 粉色 26"
            android:singleLine="true"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/textView_goodsInfoActivity_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="159.00"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@mipmap/aliwx_editor_more_pressed"
        android:layout_gravity="center_vertical"
        />
</LinearLayout>